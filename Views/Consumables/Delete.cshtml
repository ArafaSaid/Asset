@model Asset.Models.Consumable

@{
    ViewData["Title"] = "Delete Consumable";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Part Number</dt>
                <dd class="col-sm-9">@Model.PartNumber</dd>

                <dt class="col-sm-3">Quantity in Stock</dt>
                <dd class="col-sm-9">@Model.QuantityInStock @Model.UnitOfMeasure</dd>

                <dt class="col-sm-3">Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="ConsumableId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
