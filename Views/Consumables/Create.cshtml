@model Asset.Models.Consumable

@{
    ViewData["Title"] = "Create Consumable";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card mb-3">
                    <div class="card-header"><h5>Basic Information</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="Printer Supplies">Printer Supplies</option>
                                    <option value="Cables">Cables</option>
                                    <option value="Peripherals">Peripherals</option>
                                    <option value="Storage Media">Storage Media</option>
                                    <option value="Office Supplies">Office Supplies</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PartNumber" class="form-label"></label>
                                <input asp-for="PartNumber" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Manufacturer" class="form-label"></label>
                                <input asp-for="Manufacturer" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header"><h5>Inventory Information</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="QuantityInStock" class="form-label"></label>
                                <input asp-for="QuantityInStock" class="form-control" type="number" min="0" />
                                <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="MinimumStockLevel" class="form-label"></label>
                                <input asp-for="MinimumStockLevel" class="form-control" type="number" min="0" />
                                <span asp-validation-for="MinimumStockLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ReorderQuantity" class="form-label"></label>
                                <input asp-for="ReorderQuantity" class="form-control" type="number" min="0" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnitOfMeasure" class="form-label"></label>
                                <select asp-for="UnitOfMeasure" class="form-select">
                                    <option value="">-- Select Unit --</option>
                                    <option value="Each">Each</option>
                                    <option value="Box">Box</option>
                                    <option value="Pack">Pack</option>
                                    <option value="Set">Set</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Location" class="form-label"></label>
                                <input asp-for="Location" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header"><h5>Financial Information</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnitPrice" class="form-label"></label>
                                <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Supplier" class="form-label"></label>
                                <input asp-for="Supplier" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastOrderedDate" class="form-label"></label>
                                <input asp-for="LastOrderedDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastReceivedDate" class="form-label"></label>
                                <input asp-for="LastReceivedDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header"><h5>Additional Information</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CreatedBy" class="form-label"></label>
                                <input asp-for="CreatedBy" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
