@model Asset.Models.hdAssetHistory

@{
    ViewData["Title"] = "Create Asset History";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Asset History</a></li>
                    <li class="breadcrumb-item active">Create New</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-plus-circle me-2"></i>Create Asset History
            </h1>
            <p class="text-muted">Log a new action or change performed on an asset</p>
        </div>
    </div>

    <form asp-action="Create" id="historyForm">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="row">
            <div class="col-lg-6">
                <!-- Asset & Action Info -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Asset & Action Info</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="AssetID" class="form-label fw-semibold">Asset</label>
                            <select asp-for="AssetID" class="form-select" asp-items="ViewBag.AssetID"></select>
                            <span asp-validation-for="AssetID" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActionTypeId" class="form-label fw-semibold">Action Type</label>
                            <select asp-for="ActionTypeId" class="form-select" asp-items="ViewBag.ActionTypeId"></select>
                            <span asp-validation-for="ActionTypeId" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="2" placeholder="Describe the action"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SparePart" class="form-label fw-semibold"></label>
                            <input asp-for="SparePart" class="form-control" placeholder="Spare part used (if any)" />
                            <span asp-validation-for="SparePart" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- User & Date Info -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>User & Date Info</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="PerformedBy" class="form-label fw-semibold"></label>
                            <input asp-for="PerformedBy" class="form-control" placeholder="Who performed the action?" />
                            <span asp-validation-for="PerformedBy" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AssignedToUser" class="form-label fw-semibold"></label>
                            <input asp-for="AssignedToUser" class="form-control" placeholder="Assigned user (if applicable)" />
                            <span asp-validation-for="AssignedToUser" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActionDate" class="form-label fw-semibold"></label>
                            <input asp-for="ActionDate" class="form-control" type="date" />
                            <span asp-validation-for="ActionDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <!-- Audit Information -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Audit Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            Audit fields will be automatically populated by the system.
                        </div>
                        <input asp-for="CreatedAt" type="hidden" />
                        <input asp-for="CreatedBy" type="hidden" />
                        <input asp-for="UpdatedAt" type="hidden" />
                        <input asp-for="UpdatedBy" type="hidden" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Cancel & Go Back
                            </a>
                            <div>
                                <button type="reset" class="btn btn-outline-warning me-2">
                                    <i class="bi bi-arrow-clockwise me-2"></i>Reset Form
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-save me-2"></i>Create History
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .form-label.fw-semibold {
            color: #495057;
            margin-bottom: 0.5rem;
        }
        .form-control:focus,
        .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .card-header h5 {
            font-size: 1rem;
        }
    </style>

    <script>
        // Auto-populate Created/Updated fields
        document.addEventListener('DOMContentLoaded', function() {
            const now = new Date().toISOString();
            const createdAtField = document.querySelector('input[name="CreatedAt"]');
            const updatedAtField = document.querySelector('input[name="UpdatedAt"]');
            if (createdAtField && !createdAtField.value) {
                createdAtField.value = now;
            }
            if (updatedAtField && !updatedAtField.value) {
                updatedAtField.value = now;
            }
        });

        // Form validation feedback
        document.getElementById('historyForm').addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            this.classList.add('was-validated');
        });
    </script>
}
