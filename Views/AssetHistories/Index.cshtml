@model IEnumerable<Asset.Models.hdAssetHistory>

@{
    ViewData["Title"] = "Asset History";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-clock-history me-2"></i>Asset History
            </h1>
            <p class="text-muted">Track all actions and changes performed on assets</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add New History
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Asset</th>
                            <th>Action Type</th>
                            <th>Description</th>
                            <th>Spare Part</th>
                            <th>Performed By</th>
                            <th>Assigned User</th>
                            <th>Action Date</th>
                            <th>Created At</th>
                            <th>Created By</th>
                            <th>Updated At</th>
                            <th>Updated By</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="fw-bold">@item.Asset?.AssetID</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.ActionType?.ActionTypeId</span>
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.SparePart
                                </td>
                                <td>
                                    <span class="badge bg-primary">@item.PerformedBy</span>
                                </td>
                                <td>
                                    @item.AssignedToUser
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">@item.ActionDate.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td>
                                    <span class="text-muted small">@item.CreatedAt.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td>
                                    @item.CreatedBy
                                </td>
                                <td>
                                    <span class="text-muted small">@item.UpdatedAt?.ToString("MMM dd, yyyy")</span>
                                </td>
                                <td>
                                    @item.UpdatedBy
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.HistoryID" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.HistoryID" class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.HistoryID" class="btn btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this history record?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted small">
        <i class="bi bi-info-circle me-1"></i>
        Showing @Model.Count() history records
    </div>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .table tbody tr {
            transition: background-color 0.2s;
        }
        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}
