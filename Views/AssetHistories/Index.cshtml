@model IEnumerable<Asset.Models.hdAssetHistory>

@{
    ViewData["Title"] = "Asset History";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-clock-history me-2"></i>Asset History
            </h1>
            <p class="text-muted">Track all actions and changes performed on assets</p>
        </div>
        <div class="col-md-4 text-md-end">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add New History
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Asset</th>
                            <th>Action Type</th>
                            <th>Description</th>
                            <th>Details</th>
                            <th>Performed By</th>
                            <th>Action Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold text-primary">#@item.Asset?.AssetID</div>
                                    <small class="text-muted">@item.Asset?.ComputerName</small>
                                </td>
                                <td>
                                    @{
                                        var badgeClass = item.ActionTypeId switch
                                        {
                                            1 => "bg-warning text-dark",      // Maintenance
                                            2 => "bg-info",                   // User Change
                                            3 => "bg-secondary",              // Spare Part
                                            4 => "bg-success",                // Assignment
                                            5 => "bg-primary",                // Hardware Addition
                                            6 => "bg-danger",                 // Hardware Removal
                                            7 => "bg-dark",                   // Return to IT
                                            8 => "bg-secondary",              // Retired
                                            9 => "bg-info",                   // Transfer
                                            10 => "bg-warning text-dark",     // Repair
                                            11 => "bg-success",               // Upgrade
                                            12 => "bg-primary",               // Deployment
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">
                                        @item.ActionType?.Name
                                    </span>
                                </td>
                                <td>
                                    <small>@item.Description</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.SparePart))
                                    {
                                        <div><i class="bi bi-wrench text-muted"></i> <small>@item.SparePart</small></div>
                                    }
                                    @if (!string.IsNullOrEmpty(item.AssignedToUser))
                                    {
                                        <div><i class="bi bi-person text-muted"></i> <small>@item.AssignedToUser</small></div>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark">@item.PerformedBy</span>
                                </td>
                                <td>
                                    <span class="text-nowrap">@item.ActionDate.ToString("MMM dd, yyyy")</span>
                                    <div><small class="text-muted">@item.ActionDate.ToString("HH:mm")</small></div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.HistoryID" class="btn btn-outline-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.HistoryID" class="btn btn-outline-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.HistoryID" class="btn btn-outline-danger" title="Delete"
                                           onclick="return confirm('Are you sure you want to delete this history record?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted small">
        <i class="bi bi-info-circle me-1"></i>
        Showing @Model.Count() history records
    </div>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .table tbody tr {
            transition: background-color 0.2s;
        }
        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
        .btn-group-sm > .btn {
            padding: 0.25rem 0.5rem;
        }
        .badge {
            font-size: 0.75rem;
            font-weight: 500;
        }
    </style>
}
