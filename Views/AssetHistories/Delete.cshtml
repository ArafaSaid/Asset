@model Asset.Models.hdAssetHistory

@{
    ViewData["Title"] = "Delete Asset History";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Asset History</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.HistoryID">History #@Model.HistoryID</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Warning Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-danger border-0 shadow-sm" role="alert">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="bi bi-exclamation-triangle-fill fs-1"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h4 class="alert-heading mb-2">
                            <i class="bi bi-trash me-2"></i>Confirm Asset History Deletion
                        </h4>
                        <p class="mb-0">
                            You are about to permanently delete this asset history record. This action <strong>cannot be undone</strong>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- History Summary Card -->
    <div class="card border-danger shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-clock-history me-2"></i>History #@Model.HistoryID
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-5 text-muted">Asset</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-primary">@Model.Asset?.AssetID</span>
                            @Model.Asset?.ComputerName
                        </dd>
                        <dt class="col-sm-5 text-muted">Action Type</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-info">@Model.ActionType?.Name</span>
                        </dd>
                        <dt class="col-sm-5 text-muted">Description</dt>
                        <dd class="col-sm-7">@Model.Description</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.SparePart))
                        {
                            <dt class="col-sm-5 text-muted">Spare Part</dt>
                            <dd class="col-sm-7">@Model.SparePart</dd>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.SparePartSerialNumber))
                        {
                            <dt class="col-sm-5 text-muted">Part Serial</dt>
                            <dd class="col-sm-7">@Model.SparePartSerialNumber</dd>
                        }
                        
                        <dt class="col-sm-5 text-muted">Performed By</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-success">@Model.PerformedBy</span>
                        </dd>
                        
                        @if (!string.IsNullOrEmpty(Model.AssignedToUser))
                        {
                            <dt class="col-sm-5 text-muted">Assigned User</dt>
                            <dd class="col-sm-7">@Model.AssignedToUser</dd>
                        }
                        
                        <dt class="col-sm-5 text-muted">Action Date</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-light text-dark">@Model.ActionDate.ToString("MMM dd, yyyy")</span>
                        </dd>
                        
                        @if (Model.Cost.HasValue)
                        {
                            <dt class="col-sm-5 text-muted">Cost</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-success">@Model.Cost.Value.ToString("C")</span>
                            </dd>
                        }
                    </dl>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.FromUser) || !string.IsNullOrEmpty(Model.ToUser) || 
                         !string.IsNullOrEmpty(Model.FromLocation) || !string.IsNullOrEmpty(Model.ToLocation))
                    {
                        <h6 class="text-muted mb-3">Changes</h6>
                        <dl class="row">
                            @if (!string.IsNullOrEmpty(Model.FromUser) || !string.IsNullOrEmpty(Model.ToUser))
                            {
                                <dt class="col-sm-5 text-muted">User</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.FromUser))
                                    {
                                        <span class="badge bg-danger small">@Model.FromUser</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.FromUser) && !string.IsNullOrEmpty(Model.ToUser))
                                    {
                                        <i class="bi bi-arrow-right mx-1"></i>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ToUser))
                                    {
                                        <span class="badge bg-success small">@Model.ToUser</span>
                                    }
                                </dd>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.FromLocation) || !string.IsNullOrEmpty(Model.ToLocation))
                            {
                                <dt class="col-sm-5 text-muted">Location</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.FromLocation))
                                    {
                                        <span class="badge bg-danger small">@Model.FromLocation</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.FromLocation) && !string.IsNullOrEmpty(Model.ToLocation))
                                    {
                                        <i class="bi bi-arrow-right mx-1"></i>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ToLocation))
                                    {
                                        <span class="badge bg-success small">@Model.ToLocation</span>
                                    }
                                </dd>
                            }
                            
                            @if (Model.FromStatusId.HasValue || Model.ToStatusId.HasValue)
                            {
                                <dt class="col-sm-5 text-muted">Status</dt>
                                <dd class="col-sm-7">
                                    @if (Model.FromStatusId.HasValue)
                                    {
                                        <span class="badge bg-danger small">@Model.FromStatus?.Name</span>
                                    }
                                    @if (Model.FromStatusId.HasValue && Model.ToStatusId.HasValue)
                                    {
                                        <i class="bi bi-arrow-right mx-1"></i>
                                    }
                                    @if (Model.ToStatusId.HasValue)
                                    {
                                        <span class="badge bg-success small">@Model.ToStatus?.Name</span>
                                    }
                                </dd>
                            }
                        </dl>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.ReturnReason))
                    {
                        <h6 class="text-muted mb-2 mt-3">Return Reason</h6>
                        <p class="text-danger">@Model.ReturnReason</p>
                    }
                    
                    @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                    {
                        <h6 class="text-muted mb-2 mt-3">Attachment</h6>
                        <p><small>@Model.AttachmentPath</small></p>
                    }
                    
                    <h6 class="text-muted mb-2 mt-3">Audit</h6>
                    <dl class="row small">
                        <dt class="col-sm-5">Created</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy") by @Model.CreatedBy</dd>
                        <dt class="col-sm-5">Updated</dt>
                        <dd class="col-sm-7">
                            @(Model.UpdatedAt?.ToString("MMM dd, yyyy") ?? "Never")
                            @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                            {
                                <text> by @Model.UpdatedBy</text>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="HistoryID" />
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.HistoryID" class="btn btn-outline-info">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.HistoryID" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit Instead
                                </a>
                            </div>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-2">
                                    <i class="bi bi-arrow-left me-2"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg"
                                        onclick="return confirm('Are you sure you want to delete this history record? This cannot be undone!')">
                                    <i class="bi bi-trash me-2"></i>Delete
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card { transition: transform 0.2s; }
        .card:hover { transform: translateY(-2px); }
    </style>
}
