@model Asset.Models.hdAssetHistory

@{
    ViewData["Title"] = "Delete Asset History";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Asset History</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-danger">
                <i class="bi bi-trash me-2"></i>Delete Asset History
            </h1>
            <p class="text-muted">Are you sure you want to delete history record <strong>#@Model.HistoryID</strong>?</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Review Information Before Deleting</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Asset</dt>
                        <dd class="col-sm-8 fw-semibold">
                            <span class="badge bg-primary">@Model.Asset?.AssetID</span>
                        </dd>
                        <dt class="col-sm-4 text-muted">Action Type</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ActionType?.ActionTypeId</span>
                        </dd>
                        <dt class="col-sm-4 text-muted">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        <dt class="col-sm-4 text-muted">Spare Part</dt>
                        <dd class="col-sm-8">@Model.SparePart</dd>
                        <dt class="col-sm-4 text-muted">Performed By</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Model.PerformedBy</span>
                        </dd>
                        <dt class="col-sm-4 text-muted">Assigned User</dt>
                        <dd class="col-sm-8">@Model.AssignedToUser</dd>
                        <dt class="col-sm-4 text-muted">Action Date</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-light text-dark">@Model.ActionDate.ToString("MMM dd, yyyy")</span>
                        </dd>
                        <dt class="col-sm-4 text-muted">Created At</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</dd>
                        <dt class="col-sm-4 text-muted">Created By</dt>
                        <dd class="col-sm-8">@Model.CreatedBy</dd>
                        <dt class="col-sm-4 text-muted">Updated At</dt>
                        <dd class="col-sm-8">
                            @(Model.UpdatedAt?.ToString("MMM dd, yyyy 'at' hh:mm tt") ?? "Never")
                        </dd>
                        <dt class="col-sm-4 text-muted">Updated By</dt>
                        <dd class="col-sm-8">@Model.UpdatedBy</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Audit Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Created At</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</dd>
                        <dt class="col-sm-5 text-muted">Created By</dt>
                        <dd class="col-sm-7">@Model.CreatedBy</dd>
                        <dt class="col-sm-5 text-muted">Updated At</dt>
                        <dd class="col-sm-7">
                            @(Model.UpdatedAt?.ToString("MMM dd, yyyy 'at' hh:mm tt") ?? "Never")
                        </dd>
                        <dt class="col-sm-5 text-muted">Updated By</dt>
                        <dd class="col-sm-7">@Model.UpdatedBy</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HistoryID" />
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Cancel & Back to List
                </a>
                <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you sure you want to delete this history record?');">
                    <i class="bi bi-trash me-2"></i>Delete History
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        dl.row dt {
            font-weight: 500;
        }
        dl.row dd {
            margin-bottom: 0.5rem;
        }
    </style>
}
