@model Asset.Models.hdAssetHistory

@{
    ViewData["Title"] = "Asset History Details";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Asset History</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-eye me-2"></i>Asset History Details
            </h1>
            <p class="text-muted">View details for history record <strong>#@Model.HistoryID</strong></p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>History Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Asset</dt>
                        <dd class="col-sm-8 fw-semibold">
                            <span class="badge bg-primary">#@Model.Asset?.AssetID</span>
                            <span class="ms-2">@Model.Asset?.ComputerName</span>
                        </dd>
                        <dt class="col-sm-4 text-muted">Action Type</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ActionType?.Name</span>
                        </dd>
                        <dt class="col-sm-4 text-muted">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        
                        @if (!string.IsNullOrEmpty(Model.ReturnReason))
                        {
                            <dt class="col-sm-4 text-muted">Return Reason</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-warning text-dark">@Model.ReturnReason</span>
                            </dd>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.SparePart))
                        {
                            <dt class="col-sm-4 text-muted">Spare Part</dt>
                            <dd class="col-sm-8">@Model.SparePart</dd>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.SparePartSerialNumber))
                        {
                            <dt class="col-sm-4 text-muted">Part Serial</dt>
                            <dd class="col-sm-8">@Model.SparePartSerialNumber</dd>
                        }
                        
                        <dt class="col-sm-4 text-muted">Performed By</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Model.PerformedBy</span>
                        </dd>
                        
                        @if (!string.IsNullOrEmpty(Model.AssignedToUser))
                        {
                            <dt class="col-sm-4 text-muted">Assigned User</dt>
                            <dd class="col-sm-8">@Model.AssignedToUser</dd>
                        }
                        
                        <dt class="col-sm-4 text-muted">Action Date</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-light text-dark">@Model.ActionDate.ToString("MMM dd, yyyy")</span>
                        </dd>
                        
                        @if (Model.Cost.HasValue)
                        {
                            <dt class="col-sm-4 text-muted">Cost</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-success">@Model.Cost.Value.ToString("C")</span>
                            </dd>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                        {
                            <dt class="col-sm-4 text-muted">Attachment</dt>
                            <dd class="col-sm-8">
                                <a href="@Model.AttachmentPath" target="_blank" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-download"></i> Download
                                </a>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.FromUser) || !string.IsNullOrEmpty(Model.ToUser) || 
                 !string.IsNullOrEmpty(Model.FromLocation) || !string.IsNullOrEmpty(Model.ToLocation) ||
                 Model.FromStatusId.HasValue || Model.ToStatusId.HasValue)
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-arrow-left-right me-2"></i>Changes Tracked</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (!string.IsNullOrEmpty(Model.FromUser) || !string.IsNullOrEmpty(Model.ToUser))
                            {
                                <dt class="col-sm-4 text-muted">User</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.FromUser))
                                    {
                                        <span class="badge bg-danger">@Model.FromUser</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.FromUser) && !string.IsNullOrEmpty(Model.ToUser))
                                    {
                                        <i class="bi bi-arrow-right mx-2"></i>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ToUser))
                                    {
                                        <span class="badge bg-success">@Model.ToUser</span>
                                    }
                                </dd>
                            }
                            
                            @if (!string.IsNullOrEmpty(Model.FromLocation) || !string.IsNullOrEmpty(Model.ToLocation))
                            {
                                <dt class="col-sm-4 text-muted">Location</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.FromLocation))
                                    {
                                        <span class="badge bg-danger">@Model.FromLocation</span>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.FromLocation) && !string.IsNullOrEmpty(Model.ToLocation))
                                    {
                                        <i class="bi bi-arrow-right mx-2"></i>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.ToLocation))
                                    {
                                        <span class="badge bg-success">@Model.ToLocation</span>
                                    }
                                </dd>
                            }
                            
                            @if (Model.FromStatusId.HasValue || Model.ToStatusId.HasValue)
                            {
                                <dt class="col-sm-4 text-muted">Status</dt>
                                <dd class="col-sm-8">
                                    @if (Model.FromStatusId.HasValue)
                                    {
                                        <span class="badge bg-danger">@Model.FromStatus?.Name</span>
                                    }
                                    @if (Model.FromStatusId.HasValue && Model.ToStatusId.HasValue)
                                    {
                                        <i class="bi bi-arrow-right mx-2"></i>
                                    }
                                    @if (Model.ToStatusId.HasValue)
                                    {
                                        <span class="badge bg-success">@Model.ToStatus?.Name</span>
                                    }
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Audit Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-muted">Created At</dt>
                        <dd class="col-sm-7">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</dd>
                        <dt class="col-sm-5 text-muted">Created By</dt>
                        <dd class="col-sm-7">@Model.CreatedBy</dd>
                        <dt class="col-sm-5 text-muted">Updated At</dt>
                        <dd class="col-sm-7">
                            @(Model.UpdatedAt?.ToString("MMM dd, yyyy 'at' hh:mm tt") ?? "Never")
                        </dd>
                        <dt class="col-sm-5 text-muted">Updated By</dt>
                        <dd class="col-sm-7">@Model.UpdatedBy</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex flex-wrap gap-2">
                <a asp-action="Edit" asp-route-id="@Model.HistoryID" class="btn btn-primary">
                    <i class="bi bi-pencil me-1"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        dl.row dt {
            font-weight: 500;
        }
        dl.row dd {
            margin-bottom: 0.5rem;
        }
    </style>
}
