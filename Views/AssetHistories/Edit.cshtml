@model Asset.Models.hdAssetHistory

@{
    ViewData["Title"] = "Edit Asset History";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Asset History</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </nav>
            <h1 class="display-6 fw-bold text-primary">
                <i class="bi bi-pencil-square me-2"></i>Edit Asset History
            </h1>
            <p class="text-muted">Update information for history record <strong>#@Model.HistoryID</strong></p>
        </div>
    </div>

    <form asp-action="Edit" id="historyEditForm">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <input type="hidden" asp-for="HistoryID" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="CreatedBy" />
        
        <div class="row">
            <div class="col-lg-6">
                <!-- Asset & Action Info -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Asset & Action Info</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="AssetID" class="form-label fw-semibold">Asset</label>
                            <select asp-for="AssetID" class="form-select" asp-items="ViewBag.AssetID"></select>
                            <span asp-validation-for="AssetID" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActionTypeId" class="form-label fw-semibold">Action Type</label>
                            <select asp-for="ActionTypeId" class="form-select" asp-items="ViewBag.ActionTypeId"></select>
                            <span asp-validation-for="ActionTypeId" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ActionDate" class="form-label fw-semibold"></label>
                            <input asp-for="ActionDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ActionDate" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Cost" class="form-label fw-semibold"></label>
                            <input asp-for="Cost" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Cost" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Changes Tracking -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-arrow-left-right me-2"></i>Track Changes</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FromUser" class="form-label fw-semibold">From User</label>
                                <input asp-for="FromUser" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ToUser" class="form-label fw-semibold">To User</label>
                                <input asp-for="ToUser" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FromLocation" class="form-label fw-semibold">From Location</label>
                                <input asp-for="FromLocation" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ToLocation" class="form-label fw-semibold">To Location</label>
                                <input asp-for="ToLocation" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label asp-for="FromStatusId" class="form-label fw-semibold">From Status</label>
                                <select asp-for="FromStatusId" class="form-select" asp-items="ViewBag.FromStatusId">
                                    <option value="">Select Status</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ToStatusId" class="form-label fw-semibold">To Status</label>
                                <select asp-for="ToStatusId" class="form-select" asp-items="ViewBag.ToStatusId">
                                    <option value="">Select Status</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <!-- User & Assignment Info -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>User & Assignment</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="PerformedBy" class="form-label fw-semibold"></label>
                            <input asp-for="PerformedBy" class="form-control" />
                            <span asp-validation-for="PerformedBy" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="AssignedToUser" class="form-label fw-semibold"></label>
                            <input asp-for="AssignedToUser" class="form-control" />
                            <span asp-validation-for="AssignedToUser" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ReturnReason" class="form-label fw-semibold"></label>
                            <textarea asp-for="ReturnReason" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="ReturnReason" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Spare Parts Info -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="bi bi-wrench me-2"></i>Spare Parts</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SparePart" class="form-label fw-semibold"></label>
                            <input asp-for="SparePart" class="form-control" />
                            <span asp-validation-for="SparePart" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SparePartSerialNumber" class="form-label fw-semibold"></label>
                            <input asp-for="SparePartSerialNumber" class="form-control" />
                            <span asp-validation-for="SparePartSerialNumber" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Attachment -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-paperclip me-2"></i>Attachment</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="AttachmentPath" class="form-label fw-semibold"></label>
                            <input asp-for="AttachmentPath" class="form-control" />
                            <small class="text-muted">File path or URL to attachment</small>
                            <span asp-validation-for="AttachmentPath" class="text-danger small d-block"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@Model.HistoryID" class="btn btn-outline-info">
                                <i class="bi bi-eye me-2"></i>View Details
                            </a>
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                    <i class="bi bi-arrow-left me-2"></i>Back
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <style>
        .card { transition: transform 0.2s; }
        .card:hover { transform: translateY(-2px); }
    </style>
}
