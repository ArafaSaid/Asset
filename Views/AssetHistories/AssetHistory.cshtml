@model IEnumerable<Asset.Models.hdAssetHistory>

@{
    ViewData["Title"] = "Asset History";
    var asset = ViewData["Asset"] as Asset.Models.hdAssets;
    var assetId = (int)ViewData["AssetId"];
}

<div class="container py-4">
    <!-- Asset Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Assets" asp-action="Index">Assets</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Assets" asp-action="Details" asp-route-id="@assetId">@asset?.ComputerName</a></li>
                    <li class="breadcrumb-item active">History</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Asset Info Card -->
    <div class="card border-0 shadow-sm mb-4 bg-light">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="display-6 fw-bold text-primary mb-2">
                        <i class="bi bi-laptop me-2"></i>@asset?.ComputerName
                    </h2>
                    <div class="row">
                        <div class="col-md-4">
                            <small class="text-muted">User:</small>
                            <div class="fw-semibold">@asset?.UserName</div>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Serial Number:</small>
                            <div class="fw-semibold">@asset?.SerialNumber</div>
                        </div>
                        <div class="col-md-4">
                            <small class="text-muted">Status:</small>
                            <div><span class="badge bg-success">@asset?.Status?.Name</span></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-md-end">
                    <a asp-controller="AssetHistories" asp-action="Create" asp-route-assetId="@assetId" 
                       class="btn btn-primary btn-lg mb-2">
                        <i class="bi bi-plus-circle me-2"></i>Add History Entry
                    </a>
                    <div class="btn-group d-block">
                        <a asp-controller="Assets" asp-action="Details" asp-route-id="@assetId" 
                           class="btn btn-outline-info">
                            <i class="bi bi-eye me-1"></i>Asset Details
                        </a>
                        <a asp-controller="Assets" asp-action="Edit" asp-route-id="@assetId" 
                           class="btn btn-outline-primary">
                            <i class="bi bi-pencil me-1"></i>Edit Asset
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-fill me-2 text-warning"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a asp-controller="AssetHistories" asp-action="ChangeUser" asp-route-assetId="@assetId" 
                           class="btn btn-outline-primary">
                            <i class="bi bi-person-badge me-1"></i>Change User
                        </a>
                        <a asp-controller="AssetHistories" asp-action="AddHardware" asp-route-assetId="@assetId" 
                           class="btn btn-outline-success">
                            <i class="bi bi-cpu me-1"></i>Add Hardware
                        </a>
                        <a asp-controller="AssetHistories" asp-action="ReturnToIT" asp-route-assetId="@assetId" 
                           class="btn btn-outline-warning">
                            <i class="bi bi-arrow-return-left me-1"></i>Return to IT
                        </a>
                        <a asp-controller="AssetHistories" asp-action="RetireAsset" asp-route-assetId="@assetId" 
                           class="btn btn-outline-danger">
                            <i class="bi bi-x-circle me-1"></i>Retire Asset
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- History Timeline -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>History Timeline
                        <span class="badge bg-white text-primary ms-2">@Model.Count() Records</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Action Type</th>
                                        <th>Description</th>
                                        <th>Changes</th>
                                        <th>Details</th>
                                        <th>Cost</th>
                                        <th>Performed By</th>
                                        <th>Action Date</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    var badgeClass = item.ActionTypeId switch
                                                    {
                                                        1 => "bg-warning text-dark",
                                                        2 => "bg-info",
                                                        3 => "bg-secondary",
                                                        4 => "bg-success",
                                                        5 => "bg-primary",
                                                        6 => "bg-danger",
                                                        7 => "bg-dark",
                                                        8 => "bg-secondary",
                                                        9 => "bg-info",
                                                        10 => "bg-warning text-dark",
                                                        11 => "bg-success",
                                                        12 => "bg-primary",
                                                        _ => "bg-secondary"
                                                    };
                                                }
                                                <span class="badge @badgeClass">
                                                    @item.ActionType?.Name
                                                </span>
                                            </td>
                                            <td>
                                                <small>@item.Description</small>
                                                @if (!string.IsNullOrEmpty(item.ReturnReason))
                                                {
                                                    <div class="mt-1">
                                                        <span class="badge bg-warning text-dark">
                                                            <i class="bi bi-exclamation-triangle me-1"></i>@item.ReturnReason
                                                        </span>
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.FromUser) || !string.IsNullOrEmpty(item.ToUser))
                                                {
                                                    <div class="small">
                                                        <i class="bi bi-person text-muted"></i>
                                                        @if (!string.IsNullOrEmpty(item.FromUser))
                                                        {
                                                            <span class="text-danger">@item.FromUser</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.FromUser) && !string.IsNullOrEmpty(item.ToUser))
                                                        {
                                                            <i class="bi bi-arrow-right mx-1"></i>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.ToUser))
                                                        {
                                                            <span class="text-success">@item.ToUser</span>
                                                        }
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.FromLocation) || !string.IsNullOrEmpty(item.ToLocation))
                                                {
                                                    <div class="small">
                                                        <i class="bi bi-geo-alt text-muted"></i>
                                                        @if (!string.IsNullOrEmpty(item.FromLocation))
                                                        {
                                                            <span class="text-danger">@item.FromLocation</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.FromLocation) && !string.IsNullOrEmpty(item.ToLocation))
                                                        {
                                                            <i class="bi bi-arrow-right mx-1"></i>
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.ToLocation))
                                                        {
                                                            <span class="text-success">@item.ToLocation</span>
                                                        }
                                                    </div>
                                                }
                                                @if (item.FromStatusId.HasValue || item.ToStatusId.HasValue)
                                                {
                                                    <div class="small">
                                                        <i class="bi bi-flag text-muted"></i>
                                                        @if (item.FromStatusId.HasValue)
                                                        {
                                                            <span class="badge bg-danger">@item.FromStatus?.Name</span>
                                                        }
                                                        @if (item.FromStatusId.HasValue && item.ToStatusId.HasValue)
                                                        {
                                                            <i class="bi bi-arrow-right mx-1"></i>
                                                        }
                                                        @if (item.ToStatusId.HasValue)
                                                        {
                                                            <span class="badge bg-success">@item.ToStatus?.Name</span>
                                                        }
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.SparePart))
                                                {
                                                    <div><i class="bi bi-wrench text-muted"></i> <small>@item.SparePart</small></div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.SparePartSerialNumber))
                                                {
                                                    <div><i class="bi bi-hash text-muted"></i> <small>@item.SparePartSerialNumber</small></div>
                                                }
                                                @if (!string.IsNullOrEmpty(item.AssignedToUser))
                                                {
                                                    <div><i class="bi bi-person-check text-muted"></i> <small>@item.AssignedToUser</small></div>
                                                }
                                            </td>
                                            <td>
                                                @if (item.Cost.HasValue && item.Cost.Value > 0)
                                                {
                                                    <span class="badge bg-success">@item.Cost.Value.ToString("C")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-light text-dark">@item.PerformedBy</span>
                                            </td>
                                            <td>
                                                <span class="text-nowrap">@item.ActionDate.ToString("MMM dd, yyyy")</span>
                                                <div><small class="text-muted">@item.ActionDate.ToString("HH:mm")</small></div>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.HistoryID" class="btn btn-outline-info" title="Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.HistoryID" class="btn btn-outline-primary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.HistoryID" class="btn btn-outline-danger" title="Delete"
                                                       onclick="return confirm('Are you sure you want to delete this history record?')">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                            <p class="mt-3">No history records found for this asset.</p>
                            <a asp-controller="AssetHistories" asp-action="Create" asp-route-assetId="@assetId" 
                               class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Add First Record
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table tbody tr {
            transition: background-color 0.2s;
        }
        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
    </style>
}