@model Asset.Models.Software

@{
    ViewData["Title"] = "Delete Software License";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <hr />

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Version</dt>
                <dd class="col-sm-9">@Model.Version</dd>

                <dt class="col-sm-3">Vendor</dt>
                <dd class="col-sm-9">@Model.Vendor</dd>

                <dt class="col-sm-3">License Type</dt>
                <dd class="col-sm-9">@Model.LicenseType</dd>

                <dt class="col-sm-3">Licenses</dt>
                <dd class="col-sm-9">@Model.LicensesInUse / @Model.NumberOfLicenses</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="SoftwareId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
