@model IEnumerable<Asset.Models.Software>

@{
    ViewData["Title"] = "Software Licenses";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Software
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Version</th>
                            <th>Vendor</th>
                            <th>License Type</th>
                            <th>Licenses</th>
                            <th>Category</th>
                            <th>Expiration Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var availableLicenses = item.NumberOfLicenses - item.LicensesInUse;
                            var licenseClass = availableLicenses > 10 ? "text-success" : availableLicenses > 0 ? "text-warning" : "text-danger";
                            var isExpiringSoon = item.ExpirationDate.HasValue && item.ExpirationDate.Value <= DateTime.Now.AddDays(30);
                            
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Version</td>
                                <td>@item.Vendor</td>
                                <td>
                                    <span class="badge bg-info">@item.LicenseType</span>
                                </td>
                                <td class="@licenseClass">
                                    @item.LicensesInUse / @item.NumberOfLicenses
                                    <small>(@availableLicenses available)</small>
                                </td>
                                <td>@item.Category</td>
                                <td>
                                    @if (item.ExpirationDate.HasValue)
                                    {
                                        <span class="@(isExpiringSoon ? "text-danger fw-bold" : "")">
                                            @item.ExpirationDate.Value.ToString("MM/dd/yyyy")
                                            @if (isExpiringSoon)
                                            {
                                                <i class="bi bi-exclamation-triangle"></i>
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.SoftwareId" class="btn btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.SoftwareId" class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.SoftwareId" class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
