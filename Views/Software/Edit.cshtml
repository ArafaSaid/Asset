@model Asset.Models.Software

@{
    ViewData["Title"] = "Edit Software License";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SoftwareId" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="CreatedBy" />

                <div class="card mb-3">
                    <div class="card-header"><h5>Basic Information</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Version" class="form-label"></label>
                                <input asp-for="Version" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Vendor" class="form-label"></label>
                                <input asp-for="Vendor" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <select asp-for="Category" class="form-select">
                                    <option value="">-- Select Category --</option>
                                    <option value="Operating System">Operating System</option>
                                    <option value="Office Suite">Office Suite</option>
                                    <option value="Design Software">Design Software</option>
                                    <option value="Development Tools">Development Tools</option>
                                    <option value="Security Software">Security Software</option>
                                    <option value="Database">Database</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header"><h5>License Information</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseKey" class="form-label"></label>
                                <input asp-for="LicenseKey" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseType" class="form-label"></label>
                                <select asp-for="LicenseType" class="form-select">
                                    <option value="">-- Select Type --</option>
                                    <option value="Perpetual">Perpetual</option>
                                    <option value="Subscription">Subscription</option>
                                    <option value="Volume">Volume</option>
                                    <option value="Open Source">Open Source</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NumberOfLicenses" class="form-label"></label>
                                <input asp-for="NumberOfLicenses" class="form-control" type="number" min="0" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicensesInUse" class="form-label"></label>
                                <input asp-for="LicensesInUse" class="form-control" type="number" min="0" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header"><h5>Financial & Dates</h5></div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="PurchaseDate" class="form-label"></label>
                                <input asp-for="PurchaseDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PurchasePrice" class="form-label"></label>
                                <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Supplier" class="form-label"></label>
                                <input asp-for="Supplier" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ExpirationDate" class="form-label"></label>
                                <input asp-for="ExpirationDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="RenewalDate" class="form-label"></label>
                                <input asp-for="RenewalDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header"><h5>Additional Information</h5></div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="SupportContact" class="form-label"></label>
                            <input asp-for="SupportContact" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="UpdatedBy" class="form-label"></label>
                                <input asp-for="UpdatedBy" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsActive" class="form-check-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
